<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
        android:id="@+id/linearLayoutContent1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="10"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerInParent="true"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:id="@+id/txtNameOfItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_of_item"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/txtRsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNameOfItem"
                android:text="Rs."
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtPricePerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNameOfItem"
                android:text="200"
                android:layout_toEndOf="@id/txtRsLabel"
                android:textSize="15sp"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <Button
                android:id="@+id/btnRemoveFromCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:background="@color/colorAccent"
                android:text="Remove"
                android:textColor="#ffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:background="@color/colorPrimary"
                android:text="ADD"
                android:textColor="#ffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>